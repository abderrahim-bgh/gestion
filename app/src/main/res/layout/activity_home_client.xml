<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Client"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/img_4"
    android:paddingHorizontal="10dp"
    android:paddingTop="250dp">


    <EditText
        android:id="@+id/nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:hint="Nom d'utilisateur"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textColorHint="#8D000000"
        android:padding="10dp"
        android:background="@drawable/radio_selected"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:textSize="25dp"
        android:textStyle="bold"
        android:password="true"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textColorHint="#8D000000"
        android:padding="10dp"
        android:background="@drawable/radio_selected"/>



    <TextView
        android:id="@+id/passe_oubl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="10dp"
        android:text="Mot de passe oubliÃ©?"
        android:textColor="#3498db"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="end"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/btn_1"
            android:paddingHorizontal="35dp"
            android:layout_gravity="left"
            android:layout_marginHorizontal="15dp"
            android:onClick="page_admin"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_contact"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="OpenMain_client"
            android:paddingHorizontal="35dp"
            android:background="@drawable/bckg_btn_contact"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>

</LinearLayout>