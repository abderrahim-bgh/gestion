<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:orientation="vertical"
    android:background="#e8edf5"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AJOUTER UN PRODUIT"
        android:textColor="#409766"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingTop="35dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#409766"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:text="Catégorie :"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:background="@drawable/style_spinner"
                android:layout_marginRight="15dp"
                android:paddingLeft="10dp"

                />
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/addfile"
                android:onClick="addctgr"
                />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="N° Produit :"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/radio_selected"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:inputType = "number"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                />


        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Nom du Produit :"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/radio_selected"
                android:gravity="center"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Quantité :"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/radio_selected"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:inputType ="number"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                />


        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Description :"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/radio_selected"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                />


        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Photo :"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnImage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="URL.."
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@drawable/selector_upload"
                android:layout_marginRight="15dp"
                android:onClick="choseImage"
                />

        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/image_view_1"
                android:layout_gravity="top"
                />
        </LinearLayout>



        <LinearLayout
            android:paddingTop="15dp"
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="ENREGISTRER"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@drawable/bckg_btn_contact"
                android:layout_marginRight="15dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/bckg_btn_registre"
                android:text="FERMER"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/fermer"
                />


        </LinearLayout>



    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/id_navBar"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="56dp"
        app:menu="@menu/menu_bar"
        android:background="@drawable/shap_bar"
        app:itemTextColor="@drawable/select_bar"
        app:itemIconTint="@drawable/select_bar"
        app:itemIconSize="28dp"
        />





</LinearLayout>