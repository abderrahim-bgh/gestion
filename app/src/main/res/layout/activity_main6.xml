<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e8edf5"
    tools:context=".MainActivity6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LES COMPTES"
        android:textColor="#409766"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingTop="35dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#409766"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:background="#fff"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="35dp"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:background="#fff"
                android:layout_gravity="center"
                >
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="80dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Compte personnel"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center|start"
                        android:layout_column="0"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:onClick="addCompte"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:background="@drawable/eye"
                        android:layout_column="1"
                        android:layout_gravity="center|end"
                        />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="80dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Compte client"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center|start"
                        android:layout_column="0"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:onClick="addclient"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:background="@drawable/eye"
                        android:layout_column="1"
                        android:layout_gravity="center|end"

                        />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="80dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Compte fournisseur"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center|start"
                        android:layout_column="0"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:onClick="addFor"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:background="@drawable/eye"
                        android:layout_column="1"
                        android:layout_gravity="center|end"
                        />
                </GridLayout>







            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/id_navBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/shap_bar"
        app:itemIconSize="28dp"
        app:itemIconTint="@drawable/select_bar"
        app:itemTextColor="@drawable/select_bar"
        app:menu="@menu/menu_bar" />






</LinearLayout>